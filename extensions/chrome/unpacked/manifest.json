{
    "name": "Brittan Acres Amazon SchoolRewards Linker",
    "version": "0.4",
    "description": "Ensures that your purchases on Amazon get credited to Brittan Acres' SchoolRewards program",
    "update_url": "http://www.brittanacres.org/amazon/chromeupdate.xml",
    "content_scripts": [
        {
            "matches": ["http://www.amazon.com/*", "https://www.amazon.com/*"],
	    "js": ["/injection/redirect.js"],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
   "permissions": [
     "http://www.amazon.com/*"
   ]
}
